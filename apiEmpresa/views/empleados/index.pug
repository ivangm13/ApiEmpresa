extends ../layout

block content
    h2.mt-5 Lista de Empleados
    table.table
        thead
          tr
            th Nombre 
            th DNI
            th Fecha_nacimiento
            th Fecha_incorporaci√≥n
            th Salario
            th Cargo
            th Jefe
            th Acciones
        tbody
            each empleado in empleados
                tr
                    td=empleado.nombre
                    td=empleado.dni
                    td=empleado.fecha_nacimiento
                    td=empleado.fecha_incorporacion
                    td=empleado.salario
                    td=empleado.cargo
                    td=empleado.jefe
                    td 
                        a.btn.btn-info.btn-sm(href="/empleados/"+empleado.id) Detalle
                        a.btn.btn-danger.btn-sm.ml-1(href="/empleados/borrar/"+empleado.id) Eliminar